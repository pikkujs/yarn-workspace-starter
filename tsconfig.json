{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "module": "Node18",
    "moduleResolution": "node16",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "noEmit": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pikku-workspace-starter/functions": ["./packages/functions"],
      "@pikku-workspace-starter/functions/*": ["./packages/functions/*"],

      "@pikku-workspace-starter/sdk": ["./packages/sdk"],
      "@pikku-workspace-starter/sdk/*": ["./packages/sdk/*"]
    }
  },
  "include": ["**/.pikku/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "apps/next-app/.next"]
}
